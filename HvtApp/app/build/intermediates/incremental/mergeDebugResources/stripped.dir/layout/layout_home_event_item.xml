<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                                                      

                                           

                 
                            
                                                                                                          
           

    <androidx.cardview.widget.CardView
        android:id="@+id/card_content"
        android:layout_width="@dimen/home_event_image_width"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorBackground"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="true" android:tag="layout/layout_home_event_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="binding_1"                          
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <application.haveri.tourism.ui.custom.SquareImageView
                    android:id="@+id/iv_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@color/color_image_background"
                    android:tag="binding_2"                />

                <application.haveri.tourism.ui.custom.CustomTextView
                    android:id="@+id/tv_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:tag="binding_3"               
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_medium"
                    app:customFont="@string/font_roboto_regular" />

                <application.haveri.tourism.ui.custom.CustomTextView
                    android:id="@+id/tv_event_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_event_title"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:tag="binding_4"              
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_medium"
                    app:customFont="@string/font_roboto_medium" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         