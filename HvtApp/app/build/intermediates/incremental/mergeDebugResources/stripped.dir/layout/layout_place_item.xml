<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                                                      

                 
                            
                                                                                                     
           

    <androidx.cardview.widget.CardView
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorBackground"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="true" android:tag="layout/layout_place_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:tag="binding_1"                         
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_place"
                android:layout_width="match_parent"
                android:layout_height="@dimen/place_image_height_full"
                android:background="@color/color_image_background"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:tag="binding_2"              />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <application.haveri.tourism.ui.custom.CustomTextView
                        android:id="@+id/tv_place_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/tv_distance"
                        android:tag="binding_3"              
                        android:textColor="?attr/colorPrimaryText"
                        android:textSize="@dimen/font_normal"
                        android:textStyle="bold"
                        app:customFont="@string/font_roboto_medium" />

                    <application.haveri.tourism.ui.custom.CustomTextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:tag="binding_4"                 
                        android:textColor="?attr/colorTextTheme"
                        android:textSize="@dimen/font_medium"
                        app:customFont="@string/font_roboto_regular" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6">

                    <application.haveri.tourism.ui.custom.CustomTextView
                        android:id="@+id/tv_taluk_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/tv_events_count"
                        android:layout_alignParentStart="true"
                        android:tag="binding_5"              
                        android:textColor="?attr/colorTextTheme"
                        android:textSize="@dimen/font_medium"
                        app:customFont="@string/font_roboto_regular" />

                    <application.haveri.tourism.ui.custom.CustomTextView
                        android:id="@+id/tv_events_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:tag="binding_6"               
                        android:textColor="?attr/colorTextTheme"
                        android:textSize="@dimen/font_medium"
                        app:customFont="@string/font_roboto_regular"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <application.haveri.tourism.ui.custom.CustomTextView
                    android:id="@+id/tv_place_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:tag="binding_7"                                         
                    android:textColor="?attr/colorTextLight"
                    android:textSize="@dimen/font_medium"
                    app:customFont="@string/font_roboto_light" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
         