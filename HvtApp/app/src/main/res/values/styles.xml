<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary_Default</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Default</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight_Default</item>
        <item name="colorAccent">@color/colorAccent_Default</item>
        <item name="colorPrimaryText">@color/colorText_Default</item>
        <item name="colorProgressDialog">@color/colorProgressDialog_Default</item>
        <item name="colorBackground">@color/colorBackground_Default</item>
        <item name="colorTextLight">@color/colorTextLight_Default</item>
        <item name="colorTextTheme">@color/colorTextTheme_Default</item>
        <item name="colorSplash">@color/colorSplash_Default</item>
        <item name="colorIcon">@color/colorIcon_Default</item>
        <item name="android:windowBackground">@color/colorWindowBackground_Default</item>
        <item name="android:statusBarColor">@color/colorPrimary_Default</item>
    </style>

    <style name="AppThemeDark" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight_Dark</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="colorPrimaryText">@color/colorText_Dark</item>
        <item name="colorProgressDialog">@color/colorProgressDialog_Dark</item>
        <item name="colorBackground">@color/colorBackground_Dark</item>
        <item name="colorTextLight">@color/colorTextLight_Dark</item>
        <item name="colorTextTheme">@color/colorTextTheme_Dark</item>
        <item name="colorSplash">@color/colorSplash_Dark</item>
        <item name="colorIcon">@color/colorIcon_Dark</item>
        <item name="android:windowBackground">@color/colorWindowBackground_Dark</item>
        <item name="android:statusBarColor">@color/colorPrimary_Dark</item>
    </style>

    <style name="AppThemeDeepBlue" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary_DeepBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_DeepBlue</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight_DeepBlue</item>
        <item name="colorAccent">@color/colorAccent_DeepBlue</item>
        <item name="colorPrimaryText">@color/colorText_DeepBlue</item>
        <item name="colorProgressDialog">@color/colorProgressDialog_DeepBlue</item>
        <item name="colorBackground">@color/colorBackground_DeepBlue</item>
        <item name="colorTextLight">@color/colorTextLight_DeepBlue</item>
        <item name="colorTextTheme">@color/colorTextTheme_DeepBlue</item>
        <item name="colorSplash">@color/colorSplash_DeepBlue</item>
        <item name="colorIcon">@color/colorIcon_DeepBlue</item>
        <item name="android:windowBackground">@color/colorWindowBackground_Default</item>
        <item name="android:statusBarColor">@color/colorPrimary_DeepBlue</item>
    </style>

    <style name="AppThemeAmberYellow" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary_AmberYellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_AmberYellow</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight_AmberYellow</item>
        <item name="colorAccent">@color/colorAccent_AmberYellow</item>
        <item name="colorPrimaryText">@color/colorText_AmberYellow</item>
        <item name="colorProgressDialog">@color/colorProgressDialog_AmberYellow</item>
        <item name="colorBackground">@color/colorBackground_AmberYellow</item>
        <item name="colorTextLight">@color/colorTextLight_AmberYellow</item>
        <item name="colorTextTheme">@color/colorTextTheme_AmberYellow</item>
        <item name="colorSplash">@color/colorSplash_AmberYellow</item>
        <item name="colorIcon">@color/colorIcon_AmberYellow</item>
        <item name="android:windowBackground">@color/colorWindowBackground_Default</item>
        <item name="android:statusBarColor">@color/colorPrimary_AmberYellow</item>
    </style>

    <style name="AppThemePurple" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary_Purple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Purple</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight_Purple</item>
        <item name="colorAccent">@color/colorAccent_Purple</item>
        <item name="colorPrimaryText">@color/colorText_Purple</item>
        <item name="colorProgressDialog">@color/colorProgressDialog_Purple</item>
        <item name="colorBackground">@color/colorBackground_Purple</item>
        <item name="colorTextLight">@color/colorTextLight_Purple</item>
        <item name="colorTextTheme">@color/colorTextTheme_Purple</item>
        <item name="colorSplash">@color/colorSplash_Purple</item>
        <item name="colorIcon">@color/colorIcon_Purple</item>
        <item name="android:windowBackground">@color/colorWindowBackground_Default</item>
        <item name="android:statusBarColor">@color/colorPrimary_Purple</item>
    </style>

    <style name="AppThemeDarkPurple" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary_DarkPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_DarkPurple</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight_DarkPurple</item>
        <item name="colorAccent">@color/colorAccent_DarkPurple</item>
        <item name="colorPrimaryText">@color/colorText_DarkPurple</item>
        <item name="colorProgressDialog">@color/colorProgressDialog_DarkPurple</item>
        <item name="colorBackground">@color/colorBackground_DarkPurple</item>
        <item name="colorTextLight">@color/colorTextLight_DarkPurple</item>
        <item name="colorTextTheme">@color/colorTextTheme_DarkPurple</item>
        <item name="colorSplash">@color/colorSplash_DarkPurple</item>
        <item name="colorIcon">@color/colorIcon_DarkPurple</item>
        <item name="android:windowBackground">@color/colorWindowBackground_Default</item>
        <item name="android:statusBarColor">@color/colorPrimary_DarkPurple</item>
    </style>

    <style name="AppThemeRed" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary_Red</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Red</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight_Red</item>
        <item name="colorAccent">@color/colorAccent_Red</item>
        <item name="colorPrimaryText">@color/colorText_Red</item>
        <item name="colorProgressDialog">@color/colorProgressDialog_Red</item>
        <item name="colorBackground">@color/colorBackground_Red</item>
        <item name="colorTextLight">@color/colorTextLight_Red</item>
